{
    "configurations": [
        {
            "type": "node",
            "name": "vscode-jest-tests",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "args": [
                "./src",
                "--runInBand",
                "--config=./jest.json",
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceFolder}"
        },{
            "type": "chrome",
            "request": "launch",
            "name": "Launch chrome",
            "port": 9222,
            "webRoot": "${workspaceFolder}",
            "url": "http://localhost:8080"
        }
    ]
}